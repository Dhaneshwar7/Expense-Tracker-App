	<body>
		<main id="main">
			<!--  ----Main Background Code ----- -->
			<%- include('partials/MainBackground.ejs') %>

			<!--  ---- Left Container Code ----- -->
			<%- include('partials/LeftContainer.ejs') %>

			<!--  ----Center Container Code ----- -->
			<div class="center-container">
				<div class="profile-container">
					<h4 class="pb-4 border-bottom fcb">Profile Setting</h4>
					<div class="wrapper bg-white mt-sm-5">
						<div class="upload-container align-items-start py-3 border-bottom">
							<div class="profile-dp">
								<img src="<%= admin.logo %>" class="img" alt="" />
							</div>

							<form
								action="/uploadimg"
								enctype="multipart/form-data"
								method="post"
								class="upload-form"
							>
								<div class="pl-sm-4d" id="img-section">
									<b>Profile Photo</b>
									<!-- <p>Accepted file type .png. Less than 1MB</p> -->
								</div>
								<input
									class="border choose"
									type="file"
									name="image"
									required
									placeholder="ok"
								/>
								<input class="btn button border" type="submit" value="Upload" />
							</form>
						</div>
						<form
							action="/profile-update"
							method="post"
							class="bg-white mt-sm-5"
						>
							<div class="py-2">
								<div class="row py-2">
									<div class="col-md-6">
										<label for="username">Username</label>
										<input
											type="text"
											name="username"
											class="bg-light form-control nochange"
											placeholder="<%= admin.username %>"
										/>
									</div>
								</div>
								<div class="row py-2">
									<div class="col-md-6">
										<label for="firstname">First Name</label>
										<input
											type="text"
											name="firstname"
											class="bg-light form-control"
											placeholder="<%= admin.firstname %>"
										/>
									</div>
									<div class="col-md-6 pt-md-0 pt-3">
										<label for="lastname">Last Name</label>
										<input
											type="text"
											name="lastname"
											class="form-control"
											placeholder="<%= admin.lastname %>"
										/>
									</div>
								</div>
								<div class="row py-2">
									<div class="col-md-6">
										<label for="email">Email Address</label>
										<input
											type="email"
											name="email"
											class="bg-light form-control nochange"
											placeholder="<%= admin.email %>"
										/>
									</div>
									<div class="col-md-6 pt-md-0 pt-3">
										<label for="contact">Phone Number</label>
										<input
											type="number"
											name="contact"
											class="bg-light form-control"
											placeholder="<%= admin.contact %>"
										/>
									</div>
								</div>
